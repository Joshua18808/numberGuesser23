<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2109787.numberguesser23.Winscreen"
    android:background="#12113d">

    <TextView android:text="You are a winner!!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wintext"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#66ffe4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/wintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#66ffe4"
        android:textColor="#12113d"
        android:onClick="CLickeroni"
        android:text="PLAY AGAIN YOU nerd" />

</RelativeLayout>
